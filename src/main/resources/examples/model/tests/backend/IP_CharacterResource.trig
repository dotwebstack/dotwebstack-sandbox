graph config:TestTheatre {
  config:IP_CharacterResource a elmo:InformationProduct;
    
    elmo:query '''
      prefix wdrs: <http://www.w3.org/2007/05/powder-s#>
      construct {
        <${idsubject}> ?p ?o.
        ?o rdfs:label ?olabel.
        <${idsubject}> wdrs:isDescribedBy <${docsubject}>
      }
      where {
        graph <${stage}> {
          <${idsubject}> ?p ?o
          OPTIONAL {
            ?o rdfs:label ?olabel
            FILTER (lang(?olabel)="${language}" or lang(?olabel)="")
          }
        }
      }
    ''';
  .
}