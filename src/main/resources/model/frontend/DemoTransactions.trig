GRAPH dbeerpedia:Theatre {
	# Representation and storage of concepts
	dbeerpedia:ConceptResource a elmo:Representation;
    elmo:stage dbeerpedia:Stage;
		elmo:uriPattern "/id/concept/";
		elmo:informationProduct dbeerpedia:SubjectData;
		elmo:postTransaction dbeerpedia:InsertOrReplaceConcept;
		elmo:putTransaction dbeerpedia:InsertOrReplaceConcept;
		elmo:deleteTransaction dbeerpedia:DeleteConcept;
	.
}

#Concept Shape graph
GRAPH dbeerpedia:ConceptShapeGraph {
	# Constraint: a concept should have a prefLabel
	dbeerpedia:ConceptShape a sh:NodeShape;
		sh:targetClass skos:Concept;
		sh:property [
			sh:path skos:prefLabel;
			sh:minCount 1;
		];
	.
}
